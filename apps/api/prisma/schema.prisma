generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Invite {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
}
model News {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String   // русский (по умолчанию)
  titleKk     String?  // казахский
  titleEn     String?  // английский
  imageUrl    String?
  excerpt     String?  // русский
  excerptKk   String?  // казахский
  excerptEn   String?  // английский
  content     String   // русский
  contentKk   String?  // казахский
  contentEn   String?  // английский
  published   Boolean  @default(true)
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([publishedAt, published])
}

model Course {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String   // русский (по умолчанию)
  titleKk     String?  // казахский
  titleEn     String?  // английский
  description String   // русский
  descriptionKk String? // казахский
  descriptionEn String? // английский
  link        String
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([published])
}
