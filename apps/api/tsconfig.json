{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2021",
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": { "*": ["node_modules/*"] }
  },
  "include": ["src/**/*"]
}
